{
  "name": "hapi-server",
  "version": "1.0.0",
  "description": "Replacing Express with hapi",
  "main": "server.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "scripts": {
    "nodemon": "nodemon --watch lib --watch tests --exec 'npm test'",
    "test:watch": "npm test -- -w",
    "test:e2e": "mocha tests/e2e",
    "test:unit": "mocha tests/unit",
    "test": "mocha tests --recursive --reporter mocha-better-spec-reporter",
    "start": "nodemon server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wbeck32/hapi-server.git"
  },
  "author": "Wendy Beck",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wbeck32/hapi-server/issues"
  },
  "homepage": "https://github.com/wbeck32/hapi-server#readme",
  "dependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "hapi": "^16.6.2",
    "mocha": "^3.5.3",
    "mocha-better-spec-reporter": "^3.1.0",
    "morgan": "^1.9.0"
  }
}
